page{
    padding-top: 30rpx;
}

.header{
    overflow: hidden;
    padding: 30rpx 44rpx;
    background: #fff;
    position: relative;
}

.header image{
    width: 140rpx;
    height: 155rpx;
    float: left;
    margin-right: 20rpx;
}

.header view{
    line-height: 60rpx;
    font-size: 34rpx;
    padding-top: 17rpx;    
}

.header text{
    line-height: 60rpx;
    font-size: 28rpx;
    padding-bottom: 17rpx;
    display: block;
}

.header::after{
    content: "";
    position: absolute;
    width: 20rpx;
    height: 20rpx;
    border-top: 2rpx solid #ccc;
    border-right: 2rpx solid #ccc;
    right: 30rpx;
    top: 100rpx;
    transform: rotate(45deg);
}

.list{
    overflow: hidden;
    padding: 10rpx 30rpx;
    background: #fff;
    margin-top: 44rpx;
    position: relative; 
}

.list image{
    float: left;
    width: 50rpx;
    height: 50rpx;
    margin: 10rpx 20rpx 10rpx 0;
}

.list view{
    float: left;
    line-height: 70rpx;
    font-size: 32rpx;
}

.list::after{
    content: "";
    position: absolute;
    width: 20rpx;
    height: 20rpx;
    border-top: 2rpx solid #ccc;
    border-right: 2rpx solid #ccc;
    right: 30rpx;
    top: 35rpx;
    transform: rotate(45deg);
}

button{
    width: 100%;
    height: 78rpx;
    line-height: 78rpx;
    font-size: 32rpx;
    margin-top: 50rpx;
    background-color: #fff;
    color: #333;
}